{
  "name": "Email Assistant",
  "description": "Boost your productivity and save time with Email Assistant Ext, your intelligent companion for writing emails faster and clearer",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [],
   "host_permissions": [
     "http://localhost:8080/*",
    "*://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "image.png"
  }
}